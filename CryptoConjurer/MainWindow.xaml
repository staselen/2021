                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>

            <TextBlock x:Name="flowText"  Text="1.0x" FontSize="22" FontWeight="Light" Foreground="White"    Canvas.Left="286" Canvas.Top="-2" Opacity="0.7"/>


